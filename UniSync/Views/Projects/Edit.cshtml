@model UniSync.Models.Entity.Project

@{
    ViewData["Title"] = "Edit Project";
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-4">
        <h1 class="fw-bold mb-4">Edit Project</h1>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-medium">Project Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter project title" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="SubjectTitle" class="form-label fw-medium">Subject</label>
                        <input name="SubjectTitle" id="SubjectTitle" class="form-control" type="text" value="@Model.Subject.Title" placeholder="Enter subject name" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Priority" class="form-label fw-medium">Priority</label>
                        <select asp-for="Priority" class="form-select" required>
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                        </select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label fw-medium">Status</label>
                        <select asp-for="Status" class="form-select" required>
                            <option value="Not Started">Not Started</option>
                            <option value="In Progress">In Progress</option>
                            <option value="On Hold">On Hold</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Deadline" class="form-label fw-medium">Deadline</label>
                        <input asp-for="Deadline" class="form-control" type="date" />
                        <span asp-validation-for="Deadline" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Progress" class="form-label fw-medium">Progress (%)</label>
                        <input asp-for="Progress" class="form-control" type="number" min="0" max="100" required />
                        <span asp-validation-for="Progress" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-medium">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter project description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-2"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}